#%RAML 0.8

title: AppointmentGateway API from the CatCalZone
baseUri: http://catcalzone.com/
version: v1
schemas:
    - appointmentRequest: |
        {
              "type": "object",
              "$schema": "http://json-schema.org/draft-03/schema",
              "id": "http://jsonschema.net",
              "required": true,
              "properties": {
                    "requestId": {
                        "type" : "string"
                    },
                    "title": {
                                            "type": "string",
                                            "required": true
                                        },
                    "requestUser": {
                        "type" : "string",
                        "required" : true
                    },
                    "attendees": {
                        "type" : "array",
                        "items": {
                            "type": "string"
                         },
                         "minItems": 1,
                         "uniqueItems": true,
                         "required" : true
                    },
                    "minStartDate": {
                        "type" : "date",
                        "required" : true
                    },
                    "maxEndDate": {
                        "type" : "date",
                        "required" : true
                    },
                    "durationInHours": {
                        "type" : "integer",
                        "required" : true
                    },

                    "status": {
                        "type": "string"
                    },
                    "slot" : {
                        "type" : "appointmentSlotType"
                    }

              }
        }
/appointment:
  get:
    description: Returns this document or a HTML version of it
    #responses: TODO
  post:
    description: Start a new appointment request.
    body:
        application/json:
            schema: appointmentRequest
            example: TODO
    responses:
        200:
        404:


